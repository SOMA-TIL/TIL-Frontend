// 절대경로 설정을 위한 tsconfig.paths.json 파일
// tsconfig.json 파일에 extends로 추가하여 사용
// craco.config.js 파일에도 설정 추가 필요
{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@type/*": ["src/type/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
